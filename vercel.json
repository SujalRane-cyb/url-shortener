{
  "version": 2,
  "builds": [
    { "src": "backend/server.js", "use": "@vercel/node" },
    { "src": "frontend/public/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/shorten", "dest": "/backend/server.js" },
    { "src": "/public/(.*)", "dest": "/frontend/public/$1" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ]
}
